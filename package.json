{
  "name": "karma-vite",
  "version": "1.0.1",
  "description": "A karma plugin. Transform es module by using vite.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "node scripts/build.js --watch --coreOnly",
    "dev:all": "node scripts/build.js --watch",
    "build": "tsc && node scripts/build.js",
    "lint": "eslint . --ext .js,.ts",
    "format": "prettier --write --ignore-unknown .",
    "test": "jest",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ],
    "*.(j|t)s": [
      "eslint --ext .js,.ts"
    ]
  },
  "engines": {
    "node": ">=12.2.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/credred/karma-vite.git"
  },
  "keywords": [
    "karma-plugin",
    "karma-vite",
    "vite"
  ],
  "author": "credred",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/credred/karma-vite/issues"
  },
  "homepage": "https://github.com/credred/karma-vite#readme",
  "dependencies": {
    "connect": "^3.7.0",
    "local-pkg": "^0.4.2",
    "vite-plugin-istanbul": "^2.7.1"
  },
  "devDependencies": {
    "@babel/parser": "^7.19.4",
    "@babel/types": "^7.19.4",
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@types/connect": "^3.4.35",
    "@types/jest": "^29.1.2",
    "@types/karma": "^6.3.3",
    "@types/lodash": "^4.14.182",
    "@types/node": "^18.11.0",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "cac": "^6.7.14",
    "chalk": "^4.1.2",
    "di": "^0.0.1",
    "eslint": "^8.25.0 ",
    "eslint-define-config": "^1.7.0",
    "eslint-plugin-jest": "^27.1.2",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^8.0.1",
    "jest": "^29.0.3",
    "jest-environment-jsdom": "^29.2.0",
    "lint-staged": "^13.0.3",
    "lodash": "^4.17.21",
    "log4js": "^6.7.0",
    "magic-string": "^0.26.7",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.3.0",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4",
    "vite": "^3.1.8",
    "vite-plugin-dts": "^1.6.6"
  },
  "peerDependencies": {
    "karma": "^6.0.0",
    "vite": "2 || 3"
  }
}
